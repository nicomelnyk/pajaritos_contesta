{
  "manifest_version": 3,
  "name": "Pajaritos de Guardia",
  "version": "1.3.0",
  "description": "Herramienta de asistencia para responder publicaciones de Facebook con respuestas predefinidas sobre cuidado de aves",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://m.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://m.facebook.com/*"
      ],
      "js": [
        "config/helper.js",
        "config/torcaza.js",
        "config/paloma.js",
        "config/picui.js",
        "config/picazuro.js",
        "config/zorzal.js",
        "config/golondrina.js",
        "config/insectivoro_neto.js",
        "config/benteveo.js",
        "config/calandria.js",
        "config/tordo.js",
        "config/primeros_auxilios.js",
        "config/ninfas.js",
        "config/paramixovirus.js",
        "config/recien_nacido.js",
        "config/viruela.js",
        "config/gusanos.js",
        "config/repunte.js",
        "config.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*", "images/**/*"],
      "matches": ["https://www.facebook.com/*", "https://m.facebook.com/*"]
    }
  ]
}

